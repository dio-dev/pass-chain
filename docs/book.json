{
  "root": "./",
  "structure": {
    "readme": "README.md",
    "summary": "SUMMARY.md"
  },
  "title": "Pass Chain Documentation",
  "description": "Secure, decentralized password management with blockchain audit trail",
  "author": "Pass Chain Team",
  "language": "en",
  "gitbook": ">=3.0.0",
  "plugins": [
    "github",
    "edit-link",
    "prism",
    "-lunr",
    "-search",
    "search-plus",
    "github-buttons",
    "copy-code-button",
    "expandable-chapters",
    "splitter"
  ],
  "pluginsConfig": {
    "github": {
      "url": "https://github.com/yourusername/pass-chain"
    },
    "edit-link": {
      "base": "https://github.com/yourusername/pass-chain/edit/main/docs",
      "label": "Edit This Page"
    },
    "github-buttons": {
      "buttons": [
        {
          "user": "yourusername",
          "repo": "pass-chain",
          "type": "star",
          "size": "small",
          "count": true
        }
      ]
    },
    "prism": {
      "css": [
        "prism-themes/themes/prism-ghcolors.css"
      ]
    }
  },
  "links": {
    "sidebar": {
      "🏠 Home": "https://passchain.io",
      "💻 GitHub": "https://github.com/yourusername/pass-chain",
      "🚀 Launch App": "https://app.passchain.io"
    }
  },
  "pdf": {
    "pageNumbers": true,
    "fontSize": 12,
    "paperSize": "a4",
    "margin": {
      "top": 56,
      "bottom": 56,
      "left": 62,
      "right": 62
    }
  }
}

